<?xml version="1.0"?>
<config>
    <modules>
        <Peerforest_Revolutionslider>
            <version>2.0.2</version>
        </Peerforest_Revolutionslider>
    </modules>
    <frontend>
        <routers>
            <revolutionslider>
                <use>standard</use>
                <args>
                    <module>Peerforest_Revolutionslider</module>
                    <frontName>revolutionslider</frontName>
                </args>
            </revolutionslider>
        </routers>
        <layout>
            <updates>
                <revolutionslider>
                    <file>revolutionslider.xml</file>
                </revolutionslider>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
	    <revolutionslider>
		<use>admin</use>
		<args>
		    <module>Peerforest_Revolutionslider</module>
		    <frontName>revolutionslider</frontName>
		</args>
	    </revolutionslider>
        </routers>
    </admin>
    <adminhtml>	
	<layout>
	    <updates>
		<revolutionslider>
		    <file>revolutionslider.xml</file>
		</revolutionslider>
	    </updates>
	</layout>
    </adminhtml>   
    <global>
        <models>
            <revolutionslider>
                <class>Peerforest_Revolutionslider_Model</class>
                <resourceModel>revolutionslider_mysql4</resourceModel>
            </revolutionslider>
            <revolutionslider_mysql4>
                <class>Peerforest_Revolutionslider_Model_Mysql4</class>
                <entities>
                    <revolutionslider>
                        <table>revolutionslider</table>
                    </revolutionslider>
                </entities>
            </revolutionslider_mysql4>
        </models>
        <resources>
            <revolutionslider_setup>
                <setup>
                    <module>Peerforest_Revolutionslider</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </revolutionslider_setup>
            <revolutionslider_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </revolutionslider_write>
            <revolutionslider_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </revolutionslider_read>
        </resources>
        <blocks>
            <revolutionslider>
                <class>Peerforest_Revolutionslider_Block</class>
            </revolutionslider>
        </blocks>
        <helpers>
            <revolutionslider>
                <class>Peerforest_Revolutionslider_Helper</class>
            </revolutionslider>
        </helpers>
    </global>
	<default>
	    <revolutionslider>		    
		<setting>
		    <show_description>1</show_description>
		    <navigationtype>none</navigationtype>
		    <navigationarrows>solo</navigationarrows>
		    <navigationstyle>round</navigationstyle>
		    <navigationhalign>center</navigationhalign>
		    <navigationvalign>bottom</navigationvalign>
		    <soloarrowlefthalign>left</soloarrowlefthalign>
		    <soloarrowleftvalign>center</soloarrowleftvalign>
		    <soloarrowrighthalign>right</soloarrowrighthalign>
		    <soloarrowrightvalign>center</soloarrowrightvalign>
		    <touchenabled>on</touchenabled>
		    <onhoverstop>on</onhoverstop>
		    <stopatslide>0</stopatslide>
		    <stopafterloops>0</stopafterloops>
		    <shadow>0</shadow>
		</setting>		    
	    </revolutionslider>
	</default>
</config>